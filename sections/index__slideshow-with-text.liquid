{% comment %}
** Slideshow with text **
{% endcomment %}

{% comment %} Content settings {% endcomment %}
{%- assign blocks = section.blocks -%}
{% comment %} End content settings {% endcomment %}

{% comment %} Is the color set to transparent? {% endcomment %}
{%- assign background_alpha = section.settings.background_color | color_extract: 'alpha' -%}
{%- assign text_alpha = section.settings.text_color | color_extract: 'alpha' -%}

{% comment %} Section specific CSS {% endcomment %}

{%- capture section_css -%}

.text-slideshow-column {
  background: {% if background_alpha != 0 %}{{ section.settings.background_color }}{% else %}{{ settings.shop_bg_color }}{% endif %};
}

.text-slideshow__content .title {
  color: {% if text_alpha != 0 %}{{ section.settings.text_color }}{% else %}{{ settings.regular_color }}{% endif %};
}
 .text-slideshow__heading.banner__subheading.subtitle.content p{
  color: {{ section.settings.content_color }};
}
.flickity-page-dots .dot {
  background: {% if text_alpha != 0 %}{{ section.settings.text_color }}{% else %}{{ settings.regular_color }}{% endif %};
}

{%- endcapture -%}

{% style %}
.slideshow-with-text__container.container {
	align-content: stretch;
	align-items: stretch;
	background: #eeeeee;
}
.image-slideshow__slide {
	width: 100%;
}

  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.width == 'wide' %}
      width: 100%;
    {% endif %}
  }

  {% render 'css-loop',
          css: section_css,
          id: section.id
  %}
  {% render 'css-loop',
          css: section.settings.custom_css,
          id: section.id
  %}
{% endstyle %}

{% comment %} HTML markup  {% endcomment %}
{% if blocks.size > 0 %}
  <section class="section
        {{ section.settings.css_class }}
        is-width-{{ section.settings.width }}
        {% if section.settings.show_gutter == false %}
          has-no-side-gutter
          has-background
        {% else %}
          has-gutter-enabled
        {% endif %}
        {% if section.settings.width == 'wide' %}
          equal-columns--outside-trim
        {% endif %}
        ">
  <div class="slideshow-with-text__container container">
  <div class="six-tenths width_bind">
    <div class="image-slideshow-column
                three-fifths
                medium-down--one-whole
                column
                image-slideshow-position--{{ section.settings.image_position }}">
      <div class="image-slideshow image-slideshow--{{ section.settings.image_transition }}" data-image-slideshow>
        {% for block in blocks %}
          {% comment %} Content settings {% endcomment %}
          {%- assign image = block.settings.image -%}
          {% comment %} End content settings {% endcomment %}
          <div id="shopify-section-{{ block.id }}" class="image-slideshow__slide testmonial video-{{ forloop.index }}" data-slide-index={{ forloop.index0 }} {{ block.shopify_attributes }}>
           
              <a href="?video_popup={{ forloop.index }}">
         
              {% if image != blank %}
                {% render 'image-element',
                        image: block.settings.image,
                        alt: block.settings.image.alt,
                        stretch_width: true
                %}
              {% else %}
                         
              <!-- <div class="testmonial video-1">
              <a href="?video_popup=1"> <img alt="Step 1" src="https://cdn.shopify.com/s/files/1/2487/5358/files/video_img.png?v=1705463729"> </a>

              </div> -->
                 {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
  
              </a>
           
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="text-slideshow-column
                two-fifths
                medium-down--one-whole
                column
                is-align-center
                is-flex-wrap">
      <div class="text-slideshow {% if show_dots == false %} flickity-page-dots--hidden {% endif %}" data-text-slideshow data-slide-index={{ forloop.index0 }} {{ block.shopify_attributes }}>
        {% for block in blocks %}

        <div id="shopify-section-{{ block.id }}" class="text-slideshow__slide
                                                        text-slideshow__slide--{{ block.id }}"
                                                        >
            <div class="text-slideshow__content text-align-{{ section.settings.text_alignment }}">
              {% if block.settings.pretext != blank %}
                <div class="text-slideshow__heading banner__subheading">{{ block.settings.pretext }}</div>
              {% endif %}
              {% if block.settings.title != blank %}
                <h2 class="text-slideshow__heading banner__heading title">{{ block.settings.title }}</h2>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="text-slideshow__heading banner__subheading subtitle content">{{ block.settings.text }}</div>
              {% endif %}
              {% if block.settings.button_label != blank %}
                {% render 'button',
                        label: block.settings.button_label,
                        href: block.settings.button_link,
                        style: section.settings.button_style,
                        type: "link"
                %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
    
      <div class="plus_popup">
         {% for block in blocks %}
           {% if block.settings.video_id != blank %}
          <div style="display: none;" class="popuprofl_cnt popup-{{ forloop.index }}">
            <div class="clsclick video-close-{{ forloop.index }}"><svg viewbox="0 0 20 20" class="icon icon-close" role="presentation" aria-hidden="true" focusable="false"> <path d="M15.89 14.696l-4.734-4.734 4.717-4.717c.4-.4.37-1.085-.03-1.485s-1.085-.43-1.485-.03L9.641 8.447 4.97 3.776c-.4-.4-1.085-.37-1.485.03s-.43 1.085-.03 1.485l4.671 4.671-4.688 4.688c-.4.4-.37 1.085.03 1.485s1.085.43 1.485.03l4.688-4.687 4.734 4.734c.4.4 1.085.37 1.485-.03s.43-1.085.03-1.485z" fill="#444"></path> </svg></div>
            <div class="embed-container"><iframe src="{{ block.settings.video_id }}" id="video-{{ forloop.index }}" data-dashlane-frameid="417" frameborder="0" allowfullscreen="" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe></div>
          </div>
             {% endif %}
           <script>
   setTimeout(function () {
      if (window.location.href.indexOf("?video_popup={{ forloop.index }}") > -1) {
        $('.overlay').show();
        $('.video-{{ forloop.index }} .plus_popup').find('.popup-{{ forloop.index }}').show();
      }
    }, 2000);
    $('.video-{{ forloop.index }} a').click(function(e){
      e.preventDefault();
      $('.overlay').show();
      $('.popup-{{ forloop.index }}').show();
    });
    $('.clsclick').click(function(){
      $('.popup-{{ forloop.index }}').fadeOut(300);
      $('.overlay').fadeOut(300);
    });
    $('.overlay').click(function(){
      $('.popup-{{ forloop.index }}').fadeOut(300);
      $('.overlay').fadeOut(300);
    });
          $('.video-{{ forloop.index }}').click(function(){
            const video = document.querySelector("#video-{{ forloop.index }}");
            video.contentWindow.postMessage('{"method":"play"}', '*');
          });
          $('.video-close-{{ forloop.index }} svg').click(function(){
            $(".overlay").trigger("click");
            return false;
          });
          $('.overlay').click(function(){
            const video1 = document.querySelector("#video-{{ forloop.index }}");
            video1.contentWindow.postMessage('{"method":"pause"}', '*');      
          });
          </script>
         {% endfor %}
      </div>
   
  </div>
</section>
{% else %}
  <div class="container has-padding-top has-padding-bottom text-align-center">
    <div class="one-whole column">
      <p>{{ 'homepage.onboarding.no_content' | t }}</p>
    </div>
  </div>
{% endif %}
