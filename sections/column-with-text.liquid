<style>
    #shopify-section-{{ section.id }} .two-column {
      background: {{ section.settings.bg }};
      color: #fff;
      padding: 50px 0;
    }
    .two-column h2 {
      color: #fff;
    }
    .two-column .image-area {
      margin: 30px 0;
    }
    @media (min-width: 768px){
      .two-column h2.h1{
        font-size: 2.5rem;
        font-weight: 600;
      }
      .two-column .image-area img {
        padding: 0 10%;
      }
      .content-area h2{
        font-size: 1.5rem;
      }
      .two-column .left-column {
        padding-right: 4%;
      }
      .two-column .right-column {
        padding-left: 4%;
      }
    }
    @media (max-width: 767px){
      .two-column h2.h1{
        font-size: 1.5rem;
        font-weight: 600;
      }
      .content-area h2{
        font-size: 1.1rem;
      }
      .two-column .left-column, .two-column .right-column {
        display: flex;
        flex-wrap: wrap;
      }
      .two-column .left-column {
        margin-top: 30px;
      }
      .two-column .image-area {
        order: 1;
      }
    }
  </style>
  <div class="two-column">
    <div class="section">
      {% if section.settings.title != blank %}
        <h2 class="h1">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
      <div class="row content is-justify-space-between equal-columns--outside-trim">
        {% for block in section.blocks %}
          <div class="medium-down--one-whole one-half {% cycle 'left-column', 'right-column' %}">
            {% if block.settings.image != blank %}
              <div class="image-area">
                <img src="{{ block.settings.image | img_url: "master" }}" alt="{{ block.settings.title }}">
              </div>
            {% endif %}  
            <div class="content-area">
            {% if block.settings.title != blank %}
              <h2>{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.description != blank %}
              {{ block.settings.description }}
            {% endif %}  
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% schema %}
    {
      "name": "Column with Text",
      "settings": [
        {
          "type": "color",
          "id": "bg",
          "label": "Background color",
          "default": "#b81f58"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ],
      "blocks":[
        {
          "type": "image",
          "name": "Image with Text column",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description"
            }
          ]
        }
      ],
      "presets": [
        {
        "category": "Text",
        "name": "Column with Text V1"
        }
      ]
    }
  {% endschema %}
  
