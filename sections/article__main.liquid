{% comment %} Related blog posts {% endcomment %}
{% if section.settings.relate_blog %}
      {% if blog.articles_count > 1 %}
        <div class="container related-blogs" {{ block.shopify_attributes }}>
          <div class="section">
          <div class="one-whole column related-blogs--title has-margin-bottom text-center">
            <h4 class="article_relatedtitle">{{ 'blogs.article.additional_articles' | t }}</h4>
          </div>

          <div class="one-whole column related-blogs--content equal-columns--outside-trim field is-grouped is-flex-wrap">
              {% assign article_count = 0 %}
              {% assign related_articles = '' %}
              {% for tag in article.tags %}
                {% for a in blog.articles %}
                  {% unless a.id == article.id %}
                    {% unless related_articles contains a.handle %}
                      {% if a.tags contains tag %}
                        <div class="article blog-card card show-border-{{ block.settings.show_border }}">
                          {% if a.image %}
                            <div class="card-image blog-card__image">
                              <figure class="image">
                                <a href="{{ a.url }}" title="{{ a.title | escape }}">
                                  {% render 'image-element',
                                          image: a.image,
                                          alt: a.image.alt,
                                          stretch_width: true
                                  %}
                                  {%- assign article_tag = '' -%}
                                  {%- assign article_parent_tag = '' -%}
                            
                                  {%- if template.name == 'blog' and current_tags != blank -%}
                                    {%- assign article_tag = current_tags.first -%}
                                  {%- else -%}
                                    {%- if article_categories != blank -%}
                                      {%- for tag in a.tags -%}
                                        {%- assign article_categories_string = article_categories | join: '||' | prepend: '||' | append: '||' -%}
                                        {%- assign article_category_parents_string = article_category_parents | join: '||' | prepend: '||' | append: '||' -%}
                                        {%- assign article_categories_downcase = article_categories_string | downcase -%}
                                        {%- assign article_category_parents_downcase = article_category_parents_string | downcase -%}
                                        {%- assign tag_test = tag | downcase | prepend: '||' | append: '||' -%}
                            
                                        {%- if article_category_parents_downcase contains tag_test -%}
                                          {%- assign article_parent_tag = tag -%}
                                          {%- break -%}
                                        {%- elsif article_categories_downcase contains tag_test -%}
                                          {%- assign article_tag = tag -%}
                                        {%- endif -%}
                            
                                        {%- if tag contains 'Label::' -%}
                                          {%- assign article_tag_override = tag | split: '::' | last -%}
                                        {%- endif -%}
                                      {%- endfor -%}
                                    {%- endif -%}
                                  {%- endif -%}
                            
                                  {%- if article_parent_tag != blank -%}
                                    {%- assign article_tag = article_parent_tag -%}
                                  {%- endif -%}
                            
                                  {%- if article_tag_override != blank and current_tags != blank -%}
                                    {%- assign article_tag = article_tag_override -%}
                                  {%- endif -%}
                            
                                  {%- if article_tag != blank -%}
                                    <span class="article-item__label">
                                      {{ article_tag }}
                                    </span>
                                  {%- endif -%}
                                {% endif %}
                                </a>
                              </figure>
                            </div>                            
                          <div class="card-content blog-card__content">
                            <div class="media">
                              <div class="media-content">
                                <h4 class="title">
                                  <a href="{{ a.url }}" title="{{ a.title | escape }}">{{ a.title }}</a>
                                </h4>
                              </div>
                            </div>
        
                            {% comment %}{% if a.excerpt != blank %}
                              <div class="excerpt has-margin-bottom">
                                {{ a.excerpt | strip_html | strip_newlines | truncatewords: '18', '...' }}
                                <span class="truncation-fade"></span>
                              </div>
                            {% endif %}{% endcomment %}
                          </div>
        
                          <!-- <div class="blog-card__read-more buttons">
                            <a href="{{ a.url }}">{{ 'blogs.general.continue_reading_html' | t }}</a>
                          </div> -->
                        </div>
                        {% assign related_articles = related_articles | append: a.handle | append: ',' %}
                        {% assign article_count = article_count | plus: 1 %}
                      {% endif %}
                    {% endunless %}
                    {% if article_count == 6 %}
                      {% break %}
                    {% endif %}
                  {% endunless %}
                {% endfor %}
                {% if article_count == 6 %}
                  {% break %}
                {% endif %}
              {% endfor %}  
          </div>
          </div>
        </div>
      {% endif %}
    {% endif %}  
