            <a class="blog__link" href="{{ article.url }}" title="{{ article.title | escape }}">
            {% render 'image-element',
            image: article.image,
            alt: article.image.alt,
            additional_classes: 'blog-card__image'
            %}
            </a>
          </figure>
        </div>
      {% endif %}
