<style>
    .max-width-container {
      padding-left: 1em;
      padding-right: 1em;
    }
    .beyond_btn {background-color: #ed4539;border-color:#ed4539;color: #fff;text-decoration: none !important;}
    .beyond_btn:hover {background-color: #e82113;border-color:#e82113;color: #fff;}
    .hero__title {display:none;}
    @media only screen and (max-width: 420px) {
      .collection__hero { min-height: 150px;}
    }
    #shopify-section-{{section.id}} .vid-list-container {background: {{section.settings.background_color}};}
    #shopify-section-{{section.id}} #vid-list .desc {color: {{section.settings.text_color}};}
    .videos_page_list .vid-main-wrapper {
      width: 100%;
      background: #fff;
      margin: 0 auto;
      padding-top: 40px;
      padding-bottom: 40px;
    }
    .videos_page_list .vid-container {
        position: relative;
        width: 64%;
        float: left;
     }
    .videos_page_list .vid-container iframe, .videos_page_list .vid-container object, .videos_page_list .vid-container embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .videos_page_list .vid-list-container {
      width: 36%;
      height: 400px;
      overflow: hidden;
      overflow-y: auto;
      float: right;
      background: #E3EBF6;
    }
    .videos_page_list ol#vid-list {
      margin: 0;
      padding: 0;
    }
    .videos_page_list ol#vid-list li {
      list-style: none;
      display: block;
    }
    .videos_page_list ol#vid-list li a {
      text-decoration: none;
      display: block;
      padding: 10px 0 10px 10px;
      cursor: pointer;
    }
    .videos_page_list .vid-thumb {
      display: inline-block;
      margin-right: 8px;
      width: 20%;
      vertical-align: top;
    }
    .videos_page_list #vid-list .desc {
      color: #000;
      font-size: 13px;
      display: inline-block;
      width: 71%;
      vertical-align: top;
    }
    .videos_page_list .btton_subscription {
      text-align: center;
    }
    @media only screen and (min-width: 1310px){
      .max-width-container {
        padding-left: 0em;
        padding-right: 0em;
      }
    }
    @media only screen and (min-width: 480px){
      .videos_page_list .vid-main-wrapper {
        max-width: 1100px;
        min-width: 440px;
      }
    }
    @media only screen and (max-width: 991px){
        .videos_page_list .vid-container {
          width: 100%;
      }
        .videos_page_list .vid-list-container {
          width: 100%;
          height: 300px;
      }
      .videos_page_list .vid-thumb {
        vertical-align: middle;
        width: auto;
      }
    }
  </style>
  
  <section class="max-width-container">
    <div class="vid-main-wrapper clearfix"><!-- THE YOUTUBE PLAYER -->
      <div class="vid-container"><iframe id="vid_frame" src="https://www.youtube.com/embed/{{section.settings.video_id}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe></div>
      <!-- THE PLAYLIST -->
      <div class="vid-list-container">
        <ol id="vid-list">
          {%- for block in section.blocks -%}
          <li><a onclick="document.getElementById('vid_frame').src='https://www.youtube.com/embed/{{block.settings.video_id_list}}?autoplay=1&amp;rel=0&amp;showinfo=0&amp;autohide=1'"> 
            <span class="vid-thumb"><img width="72px" src="https://i.ytimg.com/vi/{{block.settings.video_id_list}}/hqdefault.jpg"/></span>
            <div class="desc">{{block.settings.video_title}}</div>
            </a>
          </li>
          {%- endfor -%}     
        </ol>
      </div>
    </div>
    <div class="text__layout category__text-layout max-width-container">
      <div class="beyond_health_tips">
        <div class="beyond_info">
          {{section.settings.content_html}}
          <div class="btton_subscription">
            {% if section.settings.url_btn != blank %}
            <p><a href="{{section.settings.url_btn}}" class="button beyond_btn" target="_blank" title="Beyond Health Tips" rel="noopener noreferrer">{{section.settings.btn_text}}</a></p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>
  {% schema %}
  {
    "name": "Page Layouts",
    "class": "videos_page_list",
    "settings": [
      {
        "type": "header",
        "content": "HTML text box"
      },
      {
        "type": "html",
        "id": "content_html",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button text"
      },
      {
        "type": "text",
        "id": "url_btn",
        "label": "Button URL"
      },
      {
        "type": "header",
        "content": "Videos"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "video_id",
        "label": "Main Video Id"
      }
    ],
    "blocks": [
      {
        "type": "video",
        "name": "Video",
        "settings": [        
          {
            "type": "text",
            "id": "video_title",
            "label": "Video Title"
          },
          {
            "type": "text",
            "id": "video_id_list",
            "label": "Video Id"
          }
        ]
      }
    ],
    "presets": [
      {
      "category": "Video",
      "name": "Video list V1"
      }
    ]
  }
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
