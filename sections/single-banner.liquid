        {
          "type": "image_picker",
          "id": "image_tab",
          "label": "Tablet image"
        },
        {
          "type": "image_picker",
          "id": "image_mob",
          "label": "Mobile image"
        }
      ],
      "presets": [
        {
          "name": "Single Banner V1",
          "category": "Image"
        }
      ]
    }
  {% endschema %}
  
