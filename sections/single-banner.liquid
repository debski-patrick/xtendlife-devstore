<div class="banner_image">
    <picture>
      <source media="(max-width:560px)" srcset="{{ section.settings.image_mob | img_url: 'master' }}">
      <source media="(max-width:979px)" srcset="{{ section.settings.image_tab | img_url: 'master' }}">
      <img src="{{ section.settings.image | img_url: 'master' }}" style="width:100%;">
    </picture> 
  </div>
  {% schema %}
    {
      "name": "Single Banner V1",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner"
