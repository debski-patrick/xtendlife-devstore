<style>
    .section.iwtb-template--14721356365921__80a3574c-c1a9-427f-b6d8-85c541cc48d3{
      max-width: 100%;
    }
    .iwtb-{{section.id}} .flex-container {
      display: flex;
      align-items: center;
      flex-wrap: nowrap;
      text-align: left;
      margin-top: 50px;
    }
    .iwtb-{{section.id}} .flex-box {
      display: flex;
      align-items: center;
      background: #E8E8E8;
      border-radius: 10px;
      padding: 15px 30px;
      margin-top: 15px;
    }
    .iwtb-{{section.id}} .flex-box:first-child {
      margin-left: 0;
    }
    .iwtb-{{section.id}} p.flex-title {
      font-size: 20px;
      font-family: Arimo-Bold;
      color: #005895;
      margin-bottom: 5px;
      word-break: break-word;
      line-height: 1.1;
      margin-top: 15px;
      margin-bottom: 5px;
    }
    .iwtb-{{section.id}} p.flex-desc {
      text-align: left;
      margin: 15px 0;
      font-size: 16px;
      font-family: Lora-Regular;
    }    
    .multivitamin_info {
     padding-left: 20px;
    }
    .multi_info {
      padding-left: 70px;
    }
    .multi_leftpart h2 {
      font-size: 44px;
    }
    .multi_leftpart p, .multi_leftpart ul, .multi_leftpart li {
      padding-top: 15px;
      font-size: 16px;
      font-family: lora-regular;
    }
