      .iwtb-{{section.id}} .flex-container{
        flex-wrap: wrap;
      }
      .iwtb-{{section.id}} .flex-box{
        flex: 0 1 100%;
        margin-bottom: 30px;
        margin-right: 0;
        margin-left: 0;
      }
      .iwtb-{{section.id}} .flex-box:first-child {
        margin-top: 0;
      }
      .iwtb-{{section.id}} .flex-box:last-child {
        margin-bottom: 0;
      }
      .iwtb-{{section.id}} .flex-box img {
        width: 100px;
      }
      .iwtb-{{section.id}} p.flex-title {
        font-size: 15.5px;
      }
      .iwtb-{{section.id}} p.flex-desc{
        font-size: .875rem;
      }
      .multi_info {
      padding-top: 40px;
      padding-left: 0;
     }
    .multi_leftpart h2, .quote_section-header h2 {
      font-size: 24px !important;
      }
    }
  </style>
  <div class="section iwtb-{{section.id}}">
    <div class="flex-container">
      <div class="multi_leftpart">
       <h2>{{ section.settings.title }}</h2>
        {{ section.settings.richcontent }}
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: "165x"}}" alt="{{ section.settings.title }}">
        {% endif %}
      </div>
      <div class="multi_info">
      {% for block in section.blocks %}
      	{% if block.settings.image != blank or block.settings.title != blank or block.settings.description != blank %}
        <div class="flex-box">
          {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: "165x"}}" alt="{{ block.settings.title }}">
          {% endif %}
          <div class="multivitamin_info">
          <p class="flex-title">{{block.settings.title}}</p>
          <p class="flex-desc">{{block.settings.description}}</p>
          </div>
        </div>
      	{% endif %}
      {% endfor %}
      </div>
    </div>
  </div>
