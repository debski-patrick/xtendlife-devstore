<link rel="preload" href="{{ 'product-information.css' | asset_url }}" as="style">
<link rel="stylesheet" href="{{ 'product-information.css' | asset_url }}">
<!-- Ingredient Info -->
<style>
  .section-{{section.id}} .quote_section-header h2 {
    color:{{section.settings.color_title}};
  }
  .nutrients-facts.section-{{section.id}} {
    background-color: {{section.settings.backgroung_color}};
    color: {{section.settings.content_color}};
  } 
</style>
<div class="nutrients-facts section-{{section.id}}">
  <div class="section">
   {% if section.settings.header != blank %}
    <div class="quote_section-header text-center">
      <h2>{{section.settings.header}}</h2>
    </div>
    {% endif %}
    <p style="text-align: center;">{{section.settings.header_content}}</p>
    <p>&nbsp;</p>
    <div class="row">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="content row is-align-center">
            <div class="four-twelfths medium-down--seven-twelfths small-down--one-whole text-center"><img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"></div>
            <div class="seven-twelfths medium-down--five-twelfths small-down--one-whole">
              <p class="h3">{{block.settings.title}}</p>
              <p>{{block.settings.content}}</p>
            </div>
          </div>
        {% endif %} 
      {% endfor %}
     </div>
  </div>
</div>
{% schema %}
  {
    "name": "Product Information",
    "settings": [
      {
        "type": "color",
        "id": "backgroung_color",
        "label": "Background Color",
        "default": "#e3ebf6"
      },
      {
        "type": "color",
        "id": "content_color",
        "label": "Content Color",
        "default": "#4271a9"
      },
      {
        "type": "text",
        "id": "header",
        "label": "Header",
        "default": "Foundational Health"
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Title Color",
        "default": "#4271a9"
      },
      {
        "type": "textarea",
        "id": "header_content",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image with text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
      "category": "Image with text",
      "name": "Product Information V1"
      }
    ]
  }
{% endschema %}

