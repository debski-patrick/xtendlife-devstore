<style>
    .text-with-subtitle-{{section.id}} h2.h1{
      color: #3f7cbf;
      margin-bottom: 15px;
      font-weight: 600;
    }
    .text-with-subtitle-{{section.id}} h2{
      color: #1B3281;
      font-weight: 600;
    }
    .text-with-subtitle-{{section.id}} h2 p{
      margin-bottom: 30px;
    }
    @media only screen and (min-width: 768px){
      .text-with-subtitle-{{section.id}} h2.h1{
        font-size: 2.5rem;
      }
      .text-with-subtitle-{{section.id}} h2{
        font-size: 1.5rem;
      }
    }
    @media only screen and (max-width: 767px){
      .text-with-subtitle-{{section.id}} h2.h1 {
        font-size: 1.5rem;
      }
      .text-with-subtitle-{{section.id}} h2 {
        font-size: 1.1rem;
      }
    }
  </style>
    <div class="text-with-subtitle-{{section.id}}">
      <div class="section">
        <h2 class="h1">{{ section.settings.title }}</h2>
        <h2>{{ section.settings.description }}</h2>
      </div>
    </div>
  {% schema %}
    {
      "name": "Title with Sub-Title V1",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ],
      "presets": [
        {
        "category": "text",
        "name": "Title with Sub-Title V1"
        }
      ]
    }
  {% endschema %}
  
