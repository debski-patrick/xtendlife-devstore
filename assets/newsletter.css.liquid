.quote_section-header.text-center {
  margin: 15px 0 30px;
}
.quote_section-header div {
  font-size: 3em;
  color: #3f7cbf;
  font-weight: 600;
  font-family: Montserrat,Arial,sans-serif;
}
.home-newsletter section.newsletter {
  padding: 25px;
}
section.newsletter {
  background: #1B3281;
  border-radius: 4px;
  margin-bottom: 32px;
}
.new_newsletter__logo {
  width: 20%;
  display: inline-block;
  vertical-align: middle;
  position: relative;
}
.newsletter_text_1 {
  width: 79%;
  display: inline-block;
  vertical-align: middle;
}
.newsletter_text_1 .new_newsletter__text p {
  font-size: 18px;
  font-family: Montserrat,Arial,sans-serif;
  font-weight: 500;
  color: #fff;
  padding-left: 5px;
  text-rendering: optimizeLegibility;
  -moz-osx-font-smoothing: grayscale;
  font-smoothing: antialiased;
  -webkit-font-smoothing: antialiased;
  text-shadow: rgba(0, 0, 0, .01) 0 0 1px;
}
.newsletter_text_1 .new_newsletter__text a {
  color: #fff;
  text-decoration: underline;
}
#email_signup {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -moz-box-pack: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  justify-content: center;
  min-width: 100%;
  padding: 0;
  margin-top: 14px;
  margin-bottom: 0;
}
#email_signup .klaviyo_form {
  width: 100%;
  margin: 15px 0 0;
}
#email_signup div {
  margin: 0;
}
#email_signup .success_message {
  text-align: center;
}
#email_signup .success_message .klaviyo_successMsg span {
  display: block;
  font-size: 12px;
}
#email_signup .success_message .klaviyo_successMsg span:first-child {
  font-size: 18px;
  margin-bottom: 10px;
}
#email_signup .klaviyo_field_group, #email_signup .klaviyo_form_fields {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
  -moz-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -moz-box-pack: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  justify-content: center;
  margin: 0 !important;
  padding: 0;
}
#email_signup .klaviyo_field_group {
  width: 84%;
}
#email_signup .klaviyo_field_group .klaviyo_input_field, #email_signup .klaviyo_form_fields .klaviyo_input_field {
  margin: 0;
  padding: 0 12px 0 0;
  width: 100%;
}
#email_signup .klaviyo_field_group #k_id_name, #email_signup .klaviyo_field_group #k_id_email, #email_signup .klaviyo_form_fields #k_id_name, #email_signup .klaviyo_form_fields #k_id_email {
  -webkit-flex-basis: 100%;
  -moz-flex-basis: 100%;
  -ms-flex-preferred-size: 100%;
  flex-basis: 100%;
  box-shadow: initial;
  height: 3.5em;
  padding: 0 1em;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
  font-family: Montserrat,Arial,sans-serif;
  font-size: 14px;
  font-weight: 500;
  outline: 0 none;
  margin: 0 0 1em;
  width: 100%;
  text-rendering: optimizeLegibility;
  -moz-osx-font-smoothing: grayscale;
  font-smoothing: antialiased;
  -webkit-font-smoothing: antialiased;
  text-shadow: rgba(0, 0, 0, .01) 0 0 1px;
}
#email_signup .klaviyo_form_actions {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -moz-box-pack: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  justify-content: center;
  padding: 0;
}
#email_signup .klaviyo_field_group .klaviyo_submit_button, #email_signup .klaviyo_form_fields .klaviyo_submit_button {
  font-size: 14px;
  box-shadow: initial;
  border: 0 none;
  height: 3.5em;
  color: #fff;
  font-family: Montserrat,Arial,sans-serif;
  font-weight: 700;
  text-transform: uppercase;
  cursor: pointer;
  outline: 0 none;
  -ms-transition: background-color .3s;
  -webkit-transition: background-color .3s;
  transition: background-color .3s;
  background-color: #36659c !important;
  margin: 0;
  width: 100%;
  border-radius: 4px;
  text-rendering: optimizeLegibility;
  -moz-osx-font-smoothing: grayscale;
  font-smoothing: antialiased;
  -webkit-font-smoothing: antialiased;
  text-shadow: rgba(0, 0, 0, .01) 0 0 1px;
}
@media only screen and (min-width: 768px){
  #email_signup .klaviyo_field_group, #email_signup .klaviyo_form_fields {
    position: relative;
  }
  #email_signup .klaviyo_field_group .klaviyo_input_field, #email_signup .klaviyo_form_fields .klaviyo_input_field {
    width: 50%;
  }
  #email_signup .klaviyo_form_actions {
    width: 16%;
  }
}
@media only screen and (max-width: 767px){
  .quote_section-header div {
    font-size: 1.5em;
  }
  .new_newsletter__logo {
    width: auto;
    display: block;
    text-align: center;
    margin-bottom: 10px;
  }
  .newsletter_text_1 {
    width: auto;
    display: block;
    text-align: center;
  }
  .newsletter_text_1 .new_newsletter__text p {
    font-size: 1em;
  }
  #email_signup .klaviyo_field_group {
    width: 100%;
  }
  #email_signup .klaviyo_field_group .klaviyo_input_field, #email_signup .klaviyo_form_fields .klaviyo_input_field {
    padding: 0;
  }
  #email_signup .klaviyo_form_actions {
    width: 100%;
  }
}