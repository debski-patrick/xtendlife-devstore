.text_bar-container {
  background-color: #005895;
  color: #fff;
  padding: 20px 5px;
  font-family: 'Lora-medium';
}
.header__promo {
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
}
.text_bar-container p {
  font-size: 20px;
  font-weight: 500;
}
@media only screen and (max-width: 1024px){
  .text_bar-container p {
    font-size: .875rem;
  }
}