{% if collection.metafields["custom_fields"]["show_description_on_load"] != blank %}
  <div class="custom-field custom-field__show-description-on-load custom-field__type--checkbox">
    <h3 class="custom-field--title">Show collection description on page load</h3>
    <div class="custom-field--value">
      {% if collection.metafields["custom_fields"]["show_description_on_load"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}

    </div>
  </div>
{% endif %}